{
  "name": "path-pattern",
  "version": "1.0.0",
  "scripts": {
    "build": "set -e; npm run tsc; npm run rollup; npm run terser",
    "tsc": "tsc --module commonjs",
    "rollup": "rollup --input ./src/main/index.ts --dir ./lib --format cjs --plugin @rollup/plugin-typescript",
    "terser": "terser --compress --mangle toplevel --output ./lib/index.js -- ./lib/index.js",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/jest": "^26.0.23",
    "jest": "^27.0.2",
    "rollup": "^2.12.0",
    "terser": "^4.7.0",
    "ts-jest": "^27.0.2",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
